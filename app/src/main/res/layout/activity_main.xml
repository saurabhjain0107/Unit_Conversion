<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC8464"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="#F1663A"
        android:layout_marginTop="10dp"
        android:src="@drawable/unit" />

    <Spinner
        android:id="@+id/spinner_LWV"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="#877B7B"
        android:backgroundTint="#CAD0EF"
        android:dropDownSelector="@drawable/unit"
        android:gravity="center"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ABB6F3"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:contentDescription="@android:string/search_go"
            android:gravity="center"
            android:outlineProvider="background"
            android:scrollbarSize="20dp"
            android:visibility="visible"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinput"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#F6EDED"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:hint="Enter Value"
            android:scrollbarSize="10dp"
            android:scrollHorizontally="false"
            android:textColorHint="#302E2E"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3DA1A1"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Result"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="#EA805E"
            android:backgroundTint="#D88F78"
            android:text="Result"
            android:inputType="number"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F12E20"
        android:gravity="center_horizontal"
        android:text="CONVERT QUANTITY"
        android:textColor="#120404"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>